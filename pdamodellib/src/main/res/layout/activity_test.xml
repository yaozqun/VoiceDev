<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:gravity="center"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="#770000aa"
        android:clickable="true"
        android:onClick="odsTest"
        android:padding="10dp"
        android:text="条码扫描功能测试" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#770000aa"
            android:padding="10dp"
            android:text="超高频扫描功能测试__点选下列距离" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#aa000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#770000aa"
                android:clickable="true"
                android:onClick="uhfTest1"
                android:padding="10dp"
                android:text="1级，近距离" />

            <View
                android:layout_width="0.1dp"
                android:layout_height="match_parent"
                android:background="#aa000000" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#770000aa"
                android:clickable="true"
                android:onClick="uhfTest2"
                android:padding="10dp"
                android:text="2级，中距离" />

            <View
                android:layout_width="0.1dp"
                android:layout_height="match_parent"
                android:background="#aa000000" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#770000aa"
                android:clickable="true"
                android:onClick="uhfTest3"
                android:padding="10dp"
                android:text="3级，远距离" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="#770000aa"
        android:clickable="true"
        android:onClick="fingerprintTest"
        android:padding="10dp"
        android:text="指纹功能测试" />

</LinearLayout>